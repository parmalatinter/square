{
  "rules": {
    ".read": false,
    ".write" :false,
    "users": {
      ".read": "auth.uid !== null",
      "$user": {
        ".write": "data.child('uid').val() === auth.uid"
      }
    },
    "friends": {
      ".read": "auth.uid !== null",
      ".write" :"auth.uid !== null",
      "$friend": {
        ".read": "root.child('friends/users/' + auth.uid).exists()",
        ".write": "root.child('friends/users/' + auth.uid).exists()",
      }
    },
    "requests": {
      ".read": "auth.uid !== null",
      ".write" :"auth.uid !== null",
      "$requests": {
        ".read": "auth.uid !== null",
        ".write": "auth.uid !== null",
      }
     },
    "chats": {
      ".read": "auth.uid !== null",
      ".write" :"auth.uid !== null",
     },
     "setting" :{
       ".read": true,
     }
  }
}
